<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topography">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_layout"
        style="@style/linear_layout_top">

        <TextView
            android:id="@+id/radio_group_question_text"
            style="@style/question_portrait" />

        <RadioGroup
            android:id="@+id/radio_group_options"
            style="@style/radio_group_portrait">

            <RadioButton
                android:id="@+id/rd_op1"
                style="@style/radio_button_portrait" />

            <RadioButton
                android:id="@+id/rd_op2"
                style="@style/radio_button_portrait" />

            <RadioButton
                android:id="@+id/rd_op3"
                style="@style/radio_button_portrait" />

            <RadioButton
                android:id="@+id/rd_op4"
                style="@style/radio_button_portrait" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin">

            <Button
                android:id="@+id/submit_button"
                style="@style/submit_button_portrait"
                android:text="@string/submit_button" />

            <Button
                android:id="@+id/back_button"
                style="@style/back_button_portrait"
                android:text="@string/back_button" />

            <Button
                android:id="@+id/next_button"
                style="@style/next_button_portrait"
                android:text="@string/next_button" />
        </RelativeLayout>

        <TextView
            android:id="@+id/answer_text"
            style="@style/answer_portrait" />

    </LinearLayout>
</ScrollView>